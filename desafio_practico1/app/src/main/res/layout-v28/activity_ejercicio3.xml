<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                app:cardCornerRadius="5dp"
                android:elevation="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cardview1"
                        android:textFontWeight="900"
                        android:id="@+id/title1"
                        android:textSize="24dp"/>
                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:padding="10dip"
                        android:layout_marginTop="10dp"
                        android:singleLine="true"
                        android:id="@+id/nombre1"
                        android:layout_below="@+id/title1"
                        android:inputType="text"
                        android:hint="@string/nombre"/>

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:singleLine="true"
                        android:padding="10dip"
                        android:id="@+id/cargo1"
                        android:inputType="text"
                        android:layout_below="@+id/nombre1"
                        android:hint="@string/apellido"/>

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:singleLine="true"
                        android:padding="10dip"
                        android:id="@+id/horas1"
                        android:inputType="number"
                        android:layout_below="@id/cargo1"
                        android:hint="@string/horas"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                app:cardCornerRadius="5dp"
                android:elevation="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cardview2"
                        android:textFontWeight="900"
                        android:id="@+id/title2"
                        android:textSize="24dp"/>
                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:padding="10dip"
                        android:layout_marginTop="10dp"
                        android:singleLine="true"
                        android:id="@+id/nombre2"
                        android:layout_below="@+id/title2"
                        android:inputType="text"
                        android:hint="@string/nombre"/>

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:singleLine="true"
                        android:padding="10dip"
                        android:id="@+id/cargo2"
                        android:inputType="text"
                        android:layout_below="@+id/nombre2"
                        android:hint="@string/apellido"/>

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:singleLine="true"
                        android:padding="10dip"
                        android:id="@+id/horas2"
                        android:inputType="number"
                        android:layout_below="@id/cargo2"
                        android:hint="@string/horas"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:padding="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="5dp"
                android:elevation="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cardview3"
                        android:textFontWeight="900"
                        android:textSize="24dp"
                        android:id="@+id/title3"/>
                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:padding="10dip"
                        android:layout_marginTop="10dp"
                        android:singleLine="true"
                        android:id="@+id/nombre3"
                        android:layout_below="@+id/title3"
                        android:inputType="text"
                        android:hint="@string/nombre"/>

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:singleLine="true"
                        android:padding="10dip"
                        android:id="@+id/cargo3"
                        android:inputType="text"
                        android:layout_below="@+id/nombre3"
                        android:hint="@string/apellido"/>

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:singleLine="true"
                        android:padding="10dip"
                        android:id="@+id/horas3"
                        android:inputType="number"
                        android:layout_below="@id/cargo3"
                        android:hint="@string/horas"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">

                <Button
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:textFontWeight="900"
                    android:text="Calcular"
                    android:textSize="16dp"
                    android:layout_marginEnd="10dp" />
                <Button
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:textFontWeight="900"
                    android:text="Regresar"
                    android:textSize="16dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>